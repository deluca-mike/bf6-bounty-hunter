{
    "name": "bf6-bounty-hunter",
    "experienceName": "Bounty Hunter",
    "version": "0.10.0",
    "type": "module",
    "description": "BF6 Portal Bounty Hunter game mode",
    "engines": {
        "node": ">=23.0.0"
    },
    "scripts": {
        "update": "node scripts/update.js",
        "refresh-ai": "node scripts/generate-ai-context.js",
        "build": "bf6-portal-bundler --entrypoint ./src/index.ts --outDir ./dist",
        "export-thumbnail": "node scripts/export-thumbnail.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier": "prettier --no-error-on-unmatched-pattern --write '**/*.{ts,js,mjs,md,json}'",
        "deploy": "npm run build && node scripts/deploy.js --script dist/bundle.ts --strings dist/bundle.strings.json --versionBump patch",
        "deploy:patch": "npm run deploy",
        "deploy:minor": "npm run build && node scripts/deploy.js --script dist/bundle.ts --strings dist/bundle.strings.json --versionBump minor",
        "deploy:major": "npm run build && node scripts/deploy.js --script dist/bundle.ts --strings dist/bundle.strings.json --versionBump major"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/deluca-mike/bf6-bounty-hunter.git"
    },
    "keywords": [
        "bounty hunter",
        "portal",
        "battlefield",
        "battlefield-6",
        "bf6"
    ],
    "author": "Michael De Luca",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/deluca-mike/bf6-bounty-hunter/issues"
    },
    "homepage": "https://github.com/deluca-mike/bf6-bounty-hunter#readme",
    "devDependencies": {
        "@bf6mods/portal": "^1.1.0",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "bf6-portal-bundler": "^1.2.0",
        "bf6-portal-mod-types": "^1.3.1",
        "bf6-portal-utils": "^7.1.1",
        "dotenv": "^17.2.4",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "prettier": "^3.8.1",
        "quickjs-types": "^1.1.0",
        "sharp": "^0.34.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0"
    },
    "templateVersion": "1.4.2"
}
