{
    "name": "bf6-bounty-hunter",
    "version": "0.6.0",
    "type": "module",
    "description": "Scripting template for Battlefield 6 Portal",
    "engines": {
        "node": ">=23.0.0"
    },
    "scripts": {
        "build": "bf6-portal-bundler --entrypoint ./src/index.ts --outDir ./dist",
        "export-thumbnail": "node export-thumbnail.js",
        "minify-spatials": "for file in ./spatials/*.json; do node spatial-minifier.js --out ./dist/\"$file\" --input \"$file\"; done",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier": "prettier --write ./src/**/*.ts ./src/*.ts ./*.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/deluca-mike/bf6-bounty-hunter.git"
    },
    "author": "Michael De Luca",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/deluca-mike/bf6-bounty-hunter/issues"
    },
    "homepage": "https://github.com/deluca-mike/bf6-bounty-hunter#readme",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "bf6-portal-bundler": "^1.1.0",
        "bf6-portal-mod-types": "^1.1.3",
        "bf6-portal-utils": "^3.0.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.7.4",
        "quickjs-types": "^1.1.0",
        "sharp": "^0.34.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.0"
    }
}
